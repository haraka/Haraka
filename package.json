{
  "author": "Matt Sergeant <helpme@gmail.com> (http://baudehlo.com/)",
  "name": "Haraka",
  "license": "MIT",
  "description": "An SMTP Server project.",
  "keywords": [ "haraka", "smtp", "server", "email" ],
  "version": "2.8.14",
  "homepage": "http://haraka.github.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/haraka/Haraka.git"
  },
  "main": "haraka.js",
  "engines": {
    "node": ">= v6.11.1"
  },
  "dependencies": {
    "address-rfc2821"       : "^1.1.1",
    "address-rfc2822"       : "^2.0.0",
    "async"                 : "~2.5.0",
    "daemon"                : "~1.1.0",
    "generic-pool"          : "~2.5.0",
    "iconv"                 : "~2.3.0",
    "ipaddr.js"             : "~1.4.0",
    "js-yaml"               : "~3.9.0",
    "nopt"                  : "~4.0.1",
    "npid"                  : "~0.4.0",
    "semver"                : "~5.4.0",
    "sprintf-js"            : "~1.1.0",
    "haraka-tld"            : "*",
    "haraka-constants"      : ">=1.0.4",
    "haraka-net-utils"      : ">=1.0.10",
    "haraka-results"        : "^2.0.0",
    "haraka-utils"          : "*",
    "haraka-plugin-access"  : "*",
    "haraka-plugin-limit"   : "*"
  },
  "optionalDependencies": {
    "haraka-plugin-asn"     : "*",
    "haraka-plugin-elasticsearch" : "*",
    "haraka-plugin-fcrdns"  : "*",
    "haraka-plugin-geoip"   : "*",
    "haraka-plugin-karma"   : "*",
    "haraka-plugin-recipient-routes" : "*",
    "haraka-plugin-redis"   : "*",
    "haraka-plugin-syslog"  : "*",
    "haraka-plugin-watch"   : "*",
    "ldapjs"                : "~1.0.0",
    "ocsp"                  : "~1.2.0",
    "redis"                 : "~2.7.0",
    "tmp"                   : "~0.0.28"
  },
  "devDependencies": {
    "nodeunit"              : "*",
    "haraka-test-fixtures"  : ">=1.0.17",
    "eslint"                : ">=3",
    "eslint-plugin-haraka"  : "*",
    "nodemailer"            : "*"
  },
  "bugs": {
    "mail": "helpme@gmail.com",
    "url": "https://github.com/haraka/Haraka/issues"
  },
  "greenkeeper": {
    "ignore": [
      "generic-pool",
      "nodemailer"
    ]
  },
  "bin": {
    "haraka": "./bin/haraka",
    "spf": "./bin/spf",
    "dkimverify": "./bin/dkimverify",
    "haraka_grep": "./bin/haraka_grep"
  },
  "scripts": {
    "test": "node run_tests",
    "lint": "node node_modules/.bin/eslint *.js plugins/*.js plugins/*/*.js tests/*.js tests/*/*.js bin/haraka bin/spf bin/dkimverify",
    "lintfix": "node node_modules/.bin/eslint --fix *.js plugins/*.js plugins/*/*.js tests/*.js tests/*/*.js bin/haraka bin/spf bin/dkimverify",
    "cover": "NODE_ENV=cov node node_modules/.bin/istanbul cov run_tests"
  }
}
