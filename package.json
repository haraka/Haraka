{
  "author": "Matt Sergeant <helpme@gmail.com> (http://baudehlo.com/)",
  "name": "Haraka",
  "license": "MIT",
  "description": "An SMTP Server project.",
  "keywords": [ "haraka", "smtp", "server", "email" ],
  "version": "2.8.12",
  "homepage": "http://haraka.github.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/haraka/Haraka.git"
  },
  "main": "haraka.js",
  "engines": {
    "node": ">= v4.6.2"
  },
  "dependencies": {
    "address-rfc2821"       : "*",
    "address-rfc2822"       : "*",
    "async"                 : "~2.1.2",
    "daemon"                : "~1.1.0",
    "generic-pool"          : "~2.5.0",
    "iconv"                 : "~2.2.0",
    "ipaddr.js"             : "~1.2.0",
    "js-yaml"               : "~3.7.0",
    "nopt"                  : "~4.0.1",
    "npid"                  : "~0.4.0",
    "semver"                : "~5.3.0",
    "sprintf-js"            : "~1.0.3",
    "haraka-tld"            : "*",
    "haraka-constants"      : "*",
    "haraka-net-utils"      : ">=1.0.4",
    "haraka-results"        : "^1.0.1",
    "haraka-utils"          : "*",
    "haraka-plugin-asn"     : "*",
    "haraka-plugin-geoip"   : "*",
    "haraka-plugin-karma"   : "*",
    "haraka-plugin-watch"   : "*"
  },
  "optionalDependencies": {
    "elasticsearch"         : "*",
    "haraka-nosql"          : "*",
    "ldapjs"                : "~1.0.0",
    "haraka-plugin-syslog"  : "*",
    "ocsp"                  : "~1.1.0",
    "redis"                 : "~2.6.2",
    "tmp"                   : "~0.0.28",
    "vs-stun"               : "~0.0.7"
  },
  "devDependencies": {
    "nodeunit"              : "*",
    "haraka-test-fixtures"  : ">=1.0.17",
    "eslint"                : ">=2",
    "eslint-plugin-haraka"  : "*"
  },
  "bugs": {
    "mail": "helpme@gmail.com",
    "url": "https://github.com/haraka/Haraka/issues"
  },
  "greenkeeper": {
    "ignore": [
      "generic-pool"
    ]
  },
  "bin": {
    "haraka": "./bin/haraka",
    "spf": "./bin/spf",
    "dkimverify": "./bin/dkimverify",
    "haraka_grep": "./bin/haraka_grep"
  },
  "scripts": {
    "test": "node run_tests",
    "lint": "./node_modules/.bin/eslint *.js plugins/**/*.js bin/haraka bin/spf bin/dkimverify tests/**/*.js",
    "lintfix": "./node_modules/.bin/eslint --fix *.js plugins/**/*.js bin/haraka bin/spf bin/dkimverify tests/**/*.js",
    "cover": "NODE_ENV=cov ./node_modules/.bin/istanbul cov run_tests"
  }
}
